<!DOCTYPE HTML>
<html>
	<%- include("inc/head.ejs") -%>
	<body>
		
	<div class="gtco-loader"></div>
	
	<div id="page">

	
	<%- include("inc/header-menu.ejs") -%>
	<%- include("inc/header.ejs") -%>
	

	
	
	<div class="gtco-section">
		<div class="gtco-container">
			<div class="row">
				<div class="col-md-12">
					<div class="col-md-6 animate-box">

						<%- include("inc/alerts.ejs") -%>

					<h3>Entre em Contato</h3>
					<form action="/contacts" method="post">
						<div class="row form-group">
							<div class="col-md-12">
								<label class="sr-only" for="name">Nome</label>
								<input type="text" id="name" name="name" class="form-control" placeholder="Seu nome" value="<%= body.name %>">
							</div>
							
						</div>

						<div class="row form-group">
							<div class="col-md-12">
								<label class="sr-only" for="email">E-mail</label>
								<input type="text" id="email" name="email" class="form-control" placeholder="Seu endereço de e-mail" value="<%= body.email %>">
							</div>
						</div>
						<div class="row form-group">
							<div class="col-md-12">
								<label class="sr-only" for="message">Mensagem</label>
								<textarea name="message" id="message" cols="30" rows="10" class="form-control" 
									placeholder="Escreve alguma coisa"><%= body.message %></textarea>
							</div>
						</div>
						<div class="form-group">
							<input type="submit" value="Enviar" class="btn btn-primary">
						</div>

					</form>		
				</div>
				<div class="col-md-5 col-md-push-1 animate-box">
					
					<div class="gtco-contact-info">
						<h3>Informações de Contato</h3>
						<ul>
							<li class="address">Rua 26 de Agosto, 63, Centro - Campo Grande-MS-CEP: 79002-081</li>
							<li class="phone"><a href="tel://1121497360">(67) 9999-9999</a></li>
							<li class="email"><a href="mailto:contato@vulpo.com.br">contato@vulpo.com.br</a></li>
							<li class="url"><a href="https://www.vulpo.com.br">vulpo.com.br</a></li>
						</ul>
					</div>


				</div>
				</div>
			</div>
		</div>
	</div>

	<%- include('inc/footer') -%>

</div>



	<%- include('inc/footer-gototop') -%>

	<%- include('inc/footer-scripts') -%>

	</body>
</html>

